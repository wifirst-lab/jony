{
  "name": "jony",
  "version": "2.0.0",
  "description": "jony-assets",
  "license": "LicenceRef-LICENCE",
  "scripts": {
    "clean-dist": "rm -rf dist tmp",
    "setup-dist": "mkdir -p tmp/css tmp/js dist/js dist/css",
    "reset": "npm run clean-dist && npm run setup-dist",
    "build-js": "node build-tasks/build-js.js",
    "copy-assets": "node build-tasks/copy-assets.js",
    "build-sass": "node build-tasks/build-sass.js",
    "build-color": "node build-tasks/build-color.js",
    "build": "npm-run-all reset --parallel build-js copy-assets"
  },
  "devDependencies": {
    "concat": "^1.0.0",
    "fs-extra": "^0.26.2",
    "lodash": "^3.10.1",
    "node-sass": "^3.7.0",
    "npm-run-all": "latest",
    "path": "latest",
    "uglifyjs": "latest"
  }
}